@{
}
@model Book
@*book partial view*@
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary bg-dark" style="float:right">
                <small>Price : @Model.Price.ToString("c")</small>
            </span>
        </h4>

        <div class="card-text p-1"> Book Author: @Model.Author</div>
        <div class="card-text p-1"> Book Publisher: @Model.Publisher</div>
        <div class="card-text p-1"> Book Isbn: @Model.Isbn</div>
        <div class="card-text p-1"> Book Classification: @Model.Classification</div>
        <div class="card-text p-1"> Book Category: @Model.Category</div>
        <div class="card-text p-1"> Book PageCount: @Model.PageCount</div>
        <div class="card-text p-1"> Book Price: @Model.Price</div>
        <form method="post" asp-page="/ShoppingCart">
            <span class="card-text">
                <input type="hidden" asp-for="@Model.BookId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="btn btn-info btn-sm float-end">Add to Cart</button>
               
            </span>

        </form>

    </div>
</div>

